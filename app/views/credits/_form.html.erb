<%= form_for @credit do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :given_to %><br />
    <%= f.text_field :given_to %>
  </p>
  <p>
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </p>
  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.label :details %><br />
    <%= f.text_field :details %>
  </p>
  <p><%= f.submit %></p>
<% end %>
