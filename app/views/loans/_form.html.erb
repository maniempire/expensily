<%= form_for @loan do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :get_from %><br />
    <%= f.text_field :get_from %>
  </p>
  <p>
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </p>
  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.label :details %><br />
    <%= f.text_field :details %>
  </p>
  <p>
    <%  %>
    <%= check_box_tag(:paid_status, AppConstants.LOAN_PAID_STATUS, @loan.paid_status == AppConstants.LOAN_PAID_STATUS ? true : false) %>
    Loan Paid
  </p>

  <p><%= f.submit %></p>
<% end %>
